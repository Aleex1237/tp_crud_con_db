<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <awards>Movie add</awards>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario" >
        <form action="/movies/create" method="POST">
            <label for="title">Title </label>
            <p><input type="text" name="title" id=""></p>
            <% if (locals.errors && errors.title) { %>
                <p class="text-danger"><%= errors.title.msg %></p>
              <% } %>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id=""> </p>
            <% if (locals.errors && errors.rating) { %>
                <p class="text-danger"><%= errors.rating.msg %></p>
              <% } %>


            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id=""></p>
            <% if (locals.errors && errors.awards) { %>
                <p class="text-danger"><%= errors.awards.msg %></p>
              <% } %>

            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id=""></p>
            <% if (locals.errors && errors.release_date) { %>
                <p class="text-danger"><%= errors.release_date.msg %></p>
              <% } %>
                
            <label for="length">Length </label>
            <p><input type="number" name="length" id=""></p>
            <% if (locals.errors && errors.length) { %>
                <p class="text-danger"><%= errors.length.msg %></p>
              <% } %>

            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>